<div class="row">
 <h1>Super Zapatos</h1>
    <div class="large-12 columns">
      <div class="panel"  ng-controller="StoresCtrl">
        <h2>List of Stores</h2>
        <table class="large-12 small-12 columns">
          <thead>
            <tr>
              <th style="width:50px;">Name</th>
              <th>Address</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
           </thead>

            <tbody>
              <% @stores.each do |store| %>
                <tr>
                  <td><%= store.name %></td>
                  <td><%= store.address %></td>
                  <td><%= link_to 'Show', store %></td>
                  <td><%= link_to 'Edit', edit_store_path(store) %></td>
                  <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
      <a href="<%= new_store_path %>" class="button success">Create New Store</a>
      </div>
    </div>
  </div>  





